<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.evnto.indotech.evnto.Hungary.hungarynow"
    tools:showIn="@layout/activity_hungarynow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <HorizontalScrollView

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scrollbarSize="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="15dp"
                        app:cardMaxElevation="15dp">

                        <Button
                            android:id="@+id/ivNonvg"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:background="@drawable/nonveg"
                            android:padding="5dp"
                            android:text="NonVeg"
                            android:textColor="@android:color/white" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="15dp"
                        app:cardMaxElevation="15dp">

                        <Button
                            android:id="@+id/ivCPD"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ivpastry"
                            android:padding="10dp"
android:layout_margin="10dp"
                            android:text="Bakery"
                            android:textColor="@android:color/white" />
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="15dp"
                        app:cardMaxElevation="15dp">

                        <Button
                            android:id="@+id/ivbooktable"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@mipmap/booktable"
                            android:padding="10dp"
                            android:layout_margin="10dp"

                            android:text="Book A Table"
                            android:textColor="@android:color/white" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="15dp"
                        app:cardMaxElevation="15dp">

                        <Button
                            android:id="@+id/ivparty"
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/party"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:text="Parties Planner"
                            android:textColor="@android:color/white" />
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="15dp"
                        app:cardMaxElevation="15dp">

                        <Button
                            android:id="@+id/ivgifts"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/giftssss"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:text="Gifts"
                            android:textColor="@android:color/white" />
                    </android.support.v7.widget.CardView>


                </LinearLayout>


            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <HorizontalScrollView

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:scrollbarSize="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"

                        app:cardElevation="15dp"
                        app:cardMaxElevation="15dp">

                        <Button
                            android:id="@+id/ivitalian"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@mipmap/pastalg"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:text="Italian Food"
                            android:textColor="@android:color/white" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="15dp"
                        app:cardMaxElevation="15dp">

                        <Button
                            android:id="@+id/ivChaines"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@mipmap/chinese"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:text="Chinese"
                            android:textColor="@android:color/white" />
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="15dp"
                        app:cardMaxElevation="15dp">

                        <Button
                            android:id="@+id/ivSouthIndian"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@mipmap/south"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:text="South Indian"
                            android:textColor="@android:color/white" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="15dp"
                        app:cardMaxElevation="15dp">

                        <Button
                            android:id="@+id/ivNorthIndian"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@mipmap/northf"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:text="North Indian"
                            android:textColor="@android:color/white" />
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="15dp"
                        app:cardMaxElevation="15dp">

                        <Button
                            android:id="@+id/ivFastFood"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@mipmap/fastff"
                            android:padding="10dp"
                            android:text="Fast Food"
android:layout_margin="5dp"
                            android:textColor="@android:color/white" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </HorizontalScrollView>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="368dp"
            android:layout_height="622dp"
            android:padding="5dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
