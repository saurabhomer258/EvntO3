<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/ivupcm"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:elevation="5dp"
       />
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/cardView2">

        <TextView
            android:id="@+id/upname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"

            android:text="Name" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/il"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="20dp"
            xmlns:android="http://schemas.android.com/apk/res/android" >


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textSize="10dp
"
                    android:id="@+id/editTextName" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editTextNumber"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextevntname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Event Name"
                    android:textSize="10dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="How many Tickets"
                    android:textSize="10dp"
                    android:id="@+id/editTextTickets" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@android:color/holo_red_dark"
                android:padding="5dp"
                android:onClick="register"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:textSize="13dp" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/updesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="3"
        android:padding="4dp"
        android:text="Description"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_below="@+id/cardView2"
        android:layout_alignLeft="@+id/cardView2"
        android:layout_alignStart="@+id/cardView2"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/cardView2"
        android:layout_alignEnd="@+id/cardView2" />

</RelativeLayout>
