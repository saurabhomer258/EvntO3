<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/iv"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/iv"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Name"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtdesc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/id"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="5dp"
                        android:lines="2"
                        android:padding="4dp"
                        android:text="Description"
                        android:textSize="10sp"
                        android:textStyle="bold" />



                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp">


                        <TextView
                            android:id="@+id/id"
                            android:layout_width="189dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:text="price"
                            android:textColor="@android:color/black"

                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                        android:id="@+id/minOrder"
                        android:layout_width="189dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"

                        android:layout_marginLeft="190dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="minOder"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/note"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Note: ₹30 delivery charge,On order of less than ₹249.   "
                        android:textColor="@android:color/holo_orange_dark"
                        android:textSize="10dp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardElevation="10dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/menu"
                        android:layout_width="201dp"
                        android:layout_height="200dp"
                        android:padding="5dp"
                        android:text="menu" />


                </android.support.v7.widget.CardView>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:id="@+id/callnow"
        android:text="order now"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@android:color/holo_red_dark"
        android:autoLink="phone"
        android:elevation="10dp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/chatus"
        android:layout_toEndOf="@+id/chatus" />


    <Button
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:id="@+id/chatus"
        android:background="@drawable/roundcorner"
        android:text="Ask About this product"
        android:backgroundTint="@android:color/holo_red_dark"
        android:autoLink="phone"
        android:elevation="10dp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>